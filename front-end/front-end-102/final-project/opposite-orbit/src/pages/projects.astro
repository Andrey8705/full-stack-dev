---
import MainLayout from '../layouts/MainLayout.astro';
import Navbar from '../components/Navbar.astro';

const projects = [
  {
    title: "Time Capsule",
    description: "Функция для создания капсул времени с использованием React, TypeScript и Vite.",
    techStack: ["React", "TypeScript", "Vite"],
    link: "/time-capsule",
    showMore: true,
    images: ["/Main.jpg"]
  },
  {
    title: "Система Аутентификации",
    description: "Интерфейс с регистрацией, авторизацией и JWT-токенами для безопасной работы.",
    techStack: ["React", "Python", "JWT"],
    link: "/projects/auth-system",
    showMore: false,
    images: ["/Login.jpg"]
  },
  {
    title: "Портфолио на Astro",
    description: "Этот сайт-портфолио, созданный с использованием Astro и Tailwind CSS.",
    techStack: ["Astro", "Tailwind CSS"],
    link: "/",
    showMore: false,
    images: ["/Portfolio.png"]
  }
];
---

<MainLayout title="Проекты">
  <Navbar />

  <section class="max-w-6xl mx-auto px-4 py-20">
    <h1 class="text-4xl md:text-5xl font-bold text-center mb-10">Мои проекты</h1>

    <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
      {projects.map((project) => (
        <div class="bg-gray-800 p-6 rounded-xl shadow-lg hover:shadow-2xl transition-transform transform hover:-translate-y-2">
          
          <!-- Галерея изображений -->
          {project.images && project.images.length > 0 && (
            <div class="mb-4">
              <img src={project.images[0]} alt={project.title} class="w-full h-48 object-cover rounded-md" />
            </div>
          )}

          <!-- Информация о проекте -->
          <h2 class="text-2xl font-semibold text-cyan-400 mb-2">{project.title}</h2>
          <p class="text-gray-300 mb-4">{project.description}</p>

          <div class="flex flex-wrap gap-2 mb-4">
            {project.techStack.map((tech) => (
              <span class="px-2 py-1 bg-cyan-600 text-sm rounded">{tech}</span>
            ))}
          </div>

          <!-- Условный рендеринг кнопки "Подробнее" -->
          {project.showMore && (
            <a href={project.link} class="inline-block bg-cyan-500 text-black px-4 py-2 rounded-md hover:bg-cyan-400 transition">
              Подробнее
            </a>
          )}
        </div>
      ))}
    </div>
  </section>
</MainLayout>
